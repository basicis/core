#!/usr/local/bin/php
<?php
require_once "vendor/autoload.php";
$path = __DIR__."/../";
$replace = "/Link to Documentation /";
$src = "README.md";
$dst = "docs/README.md";

if (file_exists($src) && file_exists($dst)) {
    $srcContent = str_replace(
        [
          "storage/img/logo.png",
          //"# Docs",
        ],
        [
          "https://raw.githubusercontent.com/basicis/core/master/storage/img/logo.png",
          //""
        ],
        file_get_contents($src)
    );

    $dstContent = str_replace(
        "# Basicis | Core \n",
        "",
        file_get_contents($dst)
    );

    file_put_contents($dst, preg_replace($replace, $dstContent, $srcContent));
    exit;
}